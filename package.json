{
  "name": "avalogica-weather-mcp",
  "version": "0.1.0",
  "description": "Avalogica Weather MCP server for delivering Open-Meteo forecasts using the Model Context Protocol (MCP).",
  "private": false,
  "type": "module",
  "bin": {
    "avalogica-weather": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "start": "node dist/index.js --port 8080",
    "dev:stdio": "tsx src/index.ts --stdio",
    "dev:shttp": "tsx src/index.ts --port 8080",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdwillman/avalogica-weather-mcp.git"
  },
  "keywords": [
    "mcp",
    "avalogica",
    "weather",
    "forecast",
    "open-meteo"
  ],
  "author": {
    "name": "Marshall D. Willman",
    "url": "https://github.com/mdwillman"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdwillman/avalogica-weather-mcp/issues"
  },
  "homepage": "https://github.com/mdwillman/avalogica-weather-mcp#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}